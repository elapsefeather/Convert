<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_enter"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/dialog_hight"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@color/background_while"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/SearchDialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/text_black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/SearchDialog_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:capitalize = "characters"
        android:textColor="@color/text_black" />
    <!--強制直接轉換為大寫字母-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SearchDialog_cencel"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/dialog_cencel"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/SearchDialog_check"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/dialog_check"
            android:textColor="@color/text_black" />
    </LinearLayout>
</LinearLayout>
